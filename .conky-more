conky.text = [[
┌─────────────────
│ Arp hosts alive:
${execpi 20 (for ip in $(for ip in $(arp -a|cut -d' ' -f2|tr '()' ' ');do (ping -c1 -w2 $ip 2>&1 >/dev/null;echo '${color'$(($?+1))"}-$ip")&done;wait);do echo '│'$(arp -a |grep "($(echo $ip|cut -d'-' -f2))"| cut -d' ' -f4)" $ip"'${color}';done)|column -t}
│${color}
┌────────────────
│ Wifi scan:
${execi 10 iwlist scan 2>&1 | grep 'ESSID\|Address' | awk '{printf " %s%s",$0,(NR%2?FS:RS)}' | sed -e 's/ESSID:\|Address\|Cell\ [0-9][0-9]\ -\ //g' | sed 's/  */ /g' | sed 's/^\ \:/\|/g' | tr '"' ' '}
┌────────────────
│ Service         Port Cnt               
${execpi 60 sudo  netstat -auntp | grep 'LISTEN' | awk '{print $4 " " $7}' | sed -E "s~(.*):([0-9]+)~\\2~" | sed -E "s~(\\s.*)/(.*)~ \\2~" | sort -k 1,1 | uniq -c | awk -F ' ' '{print "│ "$3 " " $2 " " $1 }' | column -t}









]]
