conky.text = [[
${color}Agenda:
    ${execpi 600 date +%Y-%M-%D\ %H:%m:%S && gcalcli --conky --nolineart agenda --military}
#    ${execpi 600 date +%Y-%M-%D\ %H:%m:%S && gcalcli --nolineart --nocolor agenda --military | sed -e 's/[a-z]/z/gi'}
${color}
┌────────────────
│ Wifi scan:
${execi 10 iwlist scan 2>&1 | grep 'ESSID\|Address' | awk '{printf "│ %s%s",$0,(NR%2?FS:RS)}' | sed -e 's/ESSID:\|Address\|Cell\ [0-9][0-9]\ -\ //g' | sed -e 's/^\          :\ //g'}
┌─────────────────
│ Arp hosts alive:
${execpi 20 for ip in $(for ip in $(arp -a|cut -d' ' -f2|tr '()' ' ');do (ping -c1 -w2 $ip  2>&1 >/dev/null;echo '${color'$(($?+1))"}-$ip")& done; wait);do echo '│${goto 30}'$ip $(arp -a | grep "($(echo $ip|cut -d'-' -f2))" | cut -d' ' -f4); done |column -t}
]]
