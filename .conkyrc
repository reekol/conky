conky.config = {
    own_window_type='normal',
    alignment='top_left',
    gap_x=1450,
    gap_y=20,
    maximum_width=1890,
    background=true,
    use_xft=true,
    font='Monospace:size=7',
    xftalpha=1,
    update_interval=1.0,
    total_run_times=0,
    own_window=true,
    own_window_transparent=true,
    own_window_hints='undecorated,below,sticky,skip_taskbar,skip_pager',
    double_buffer=true,
    draw_shades=false,
    draw_outline=false,
    draw_borders=false,
    draw_graph_borders=true,
    stippled_borders=0,
    border_width=0,
    default_shade_color='black',
    default_outline_color='white',
    no_buffers=true,
    cpu_avg_samples=2,
    net_avg_samples=2,
    override_utf8_locale=true,
    use_spacer='right',
    own_window_argb_visual=true,
    default_color='white',
    color0='green',
    color1='cyan',
    color2='DC143C',
    lua_draw_hook_pre='ring_stats',
    pad_percents=3
}

conky.text = [[
    ${alignr}${offset -10}${font DejaVu Sans:pixelsize=30}${color2}Ree${color1}Kol${font}${color}
    ${alignr}${offset -51}▲ 
    ${alignr}${font monospace:pixelsize=12}${exec date +%H:%M:%S} - utc:${exec date +%H:%M:%S -u} └───────┐${font}
    ${alignr}  ${nodename} ─┬─┤
    ${alignr}  ${exec uname -r } :  kernel ─┤ │
    ${alignr}  $machine :    arch ─┤ │
    ${alignr}  $uptime :  uptime ─┤ │
    ${alignr}  ${exec cat /sys/class/power_supply/BAT*/capacity}% : battery ─┘ │
    ${alignr}  ┌── system ─┬─┤
    ${alignr}  ${color2}CPU-0 ${cpu cpu0}% ${cpubar cpu0 5,40}${color}${alignr} ─┼─ ${freq_g 0} Ghz │ │
    ${alignr}  CPU-1 ${cpu cpu1}% ${cpubar cpu1 5,40} ─┼─ ${freq_g 1} Ghz │ │
    ${alignr}  CPU-2 ${cpu cpu2}% ${cpubar cpu2 5,40} ─┼─ ${freq_g 2} Ghz │ │
    ${alignr}  CPU-3 ${cpu cpu3}% ${cpubar cpu3 5,40} ─┼─ ${freq_g 3} Ghz │ │
    ${alignr}  CPU-4 ${cpu cpu4}% ${cpubar cpu4 5,40} ─┼─ ${freq_g 4} Ghz │ │
    ${alignr}  CPU-5 ${cpu cpu5}% ${cpubar cpu5 5,40} ─┼─ ${freq_g 5} Ghz │ │
    ${alignr}  CPU-6 ${cpu cpu6}% ${cpubar cpu6 5,40} ─┼─ ${freq_g 6} Ghz │ │
    ${alignr}  CPU-7 ${cpu cpu7}% ${cpubar cpu7 5,40} ─┼─ ${freq_g 7} Ghz │ │
    ${alignr}  CPU-8 ${cpu cpu8}% ${cpubar cpu8 5,40} ─┴─ ${freq_g 8} Ghz │ │
    ${alignr}  ${color1}[${color} $loadavg ${color1}]${color} ──── load ─┬─┤ │
    ${alignr}  ${color2}[${color} ${top name 1}  ${top cpu 1} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top name 2}  ${top cpu 2} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top name 3}  ${top cpu 3} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top name 4}  ${top cpu 4} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top name 5}  ${top cpu 5} ${color2}]${color} ─┘ │ │
    ${alignr}  ${color1}[${color} $processes/$running_processes ${color1}]${color}    total/running ─┤ │
    ${alignr}  ${color1}[${color} ${exec sensors | grep Package| cut -c 16-22}    ${color1}]${color}      temperature ─┘ │
    ${alignr}  resources ─┬─┤
    ${alignr}  ${color1}[${color} $diskio_read / $diskio_write ${color1}]${color}      R/W ─┤ │
    ${alignr}  ${membar 8,100} $memperc% ─ RAM ─┬─┤ │
    ${alignr}  $mem / $memmax  ───────────┤ │ │
    ${alignr}  ${color2}[${color} ${top_mem name 1}  ${top_mem mem 1} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top_mem name 2}  ${top_mem mem 2} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top_mem name 3}  ${top_mem mem 3} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top_mem name 4}  ${top_mem mem 4} ${color2}]${color} ─┤ │ │
    ${alignr}  ${color2}[${color} ${top_mem name 5}  ${top_mem mem 5} ${color2}]${color} ─┘ │ │
    ${alignr}  $swap/$swapmax ${swapbar 5,50} swap ─┤ │
    ${alignr}  ${fs_used /}/${fs_size /} ${fs_bar 5,50 /} root ─┘ │
    ${alignr}  ${addr enp2s0}: enp2s0 net ─┬─┤
    ${alignr}  ${upspeed enp2s0} k/s ${upspeedgraph enp2s0 8,70 DC143C DC143C}   up ─┤ │
    ${alignr}  ${downspeed enp2s0} k/s ${downspeedgraph enp2s0 8,70 DC143C DC143C} down ─┤ │
    ${alignr}  ${addr wlp3s0}: wlp3s0 ─┤ │
    ${alignr}  ${upspeed wlp3s0} k/s ${upspeedgraph wlp3s0 8,70 DC143C DC143C}   up ─┤ │
    ${alignr}  ${downspeed wlp3s0} k/s ${downspeedgraph wlp3s0 8,70 DC143C DC143C} down ─┤ │
    ${alignr}  [ ${tcp_portmon 32768 61000 count} ] out / remote ─┤ │
    ${alignr}  [ ${tcp_portmon 1 65535 count} ]  connections ─┤ │
    ${alignr}  [ ${tcp_portmon 1 32767 count} ]  in / locale ─┘ │
    ${alignr}  Gpu utilisation ─┘
    ${execpi 10 nvidia-smi | grep Default | awk '{print $3"\t"$9" / "$11}' | sed 's/^/${goto 90}/g'}

]]
